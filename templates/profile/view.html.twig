{# templates/profile/view.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mi Perfil - Mokhuba Club{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Reutilizamos estilos de edit.html.twig */
    .profile-container {
        min-height: 100vh;
        padding: 60px 20px;
        background: linear-gradient(135deg, var(--black-premium) 0%, var(--dark-brown) 50%, var(--rich-brown) 100%);
    }

    .profile-card {
        max-width: 800px;
        margin: 0 auto;
        background: rgba(45, 24, 23, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(212, 175, 55, 0.3);
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 30px;
        border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    }

    .profile-header h1 {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        background: linear-gradient(135deg, var(--gold-primary), var(--gold-light), var(--gold-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 10px;
    }

    .profile-avatar-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid var(--gold-primary);
        object-fit: cover;
        margin: 0 auto 20px;
        display: block;
        box-shadow: 0 8px 32px rgba(212, 175, 55, 0.3);
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 30px;
    }

    .info-item {
        background: rgba(13, 10, 6, 0.6);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 12px;
        padding: 20px;
    }

    .info-label {
        color: rgba(255, 248, 220, 0.7);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .info-value {
        color: var(--cream);
        font-size: 1.1rem;
        font-weight: 500;
    }

    .profile-code-display {
        background: linear-gradient(135deg, rgba(212, 175, 55, 0.1), rgba(184, 148, 31, 0.05));
        border: 2px solid rgba(212, 175, 55, 0.4);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: center;
    }

    .profile-code-display .code {
        font-family: 'Courier New', monospace;
        font-size: 1.8rem;
        font-weight: bold;
        color: var(--gold-primary);
        letter-spacing: 3px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .premium-button {
        background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
        color: var(--dark-brown);
        border: none;
        padding: 14px 28px;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 6px 25px rgba(212, 175, 55, 0.4);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .premium-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 35px rgba(212, 175, 55, 0.5);
    }

    .secondary-button {
        background: rgba(212, 175, 55, 0.1);
        color: var(--gold-primary);
        border: 2px solid var(--gold-primary);
    }

    .membership-badge {
        display: inline-block;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-top: 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .preferences-section {
        background: rgba(13, 10, 6, 0.6);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
    }

    .preferences-section h3 {
        color: var(--gold-primary);
        font-family: var(--font-heading);
        margin-bottom: 15px;
    }

    .preferences-list {
        color: var(--cream);
        line-height: 1.8;
    }

    @media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .premium-button {
            width: 100%;
            justify-content: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="container">
        <div class="profile-card">
            <div class="profile-header">
                <h1>
                    <i class="fas fa-user-circle"></i>
                    Mi Perfil
                </h1>
                {% if user.membershipLevel %}
                    <span class="membership-badge" style="background: {{ user.membershipColor }};">
                        <i class="{{ user.membershipIcon }}"></i>
                        {{ user.membershipDisplayName }}
                    </span>
                {% endif %}
            </div>

            {# Foto de perfil #}
            <div class="profile-avatar-section">
                {% if user.photoPath %}
                    <img src="{{ asset(user.photoPath) }}" alt="{{ user.fullName }}" class="profile-avatar">
                {% else %}
                    <img src="{{ asset('/images/default-avatar.png') }}" alt="{{ user.fullName }}" class="profile-avatar">
                {% endif %}
                <h2 style="color: var(--cream); margin-top: 15px;">{{ user.fullName }}</h2>
            </div>

            {# C√≥digo √∫nico #}
            <div class="profile-code-display">
                <div style="color: rgba(255, 248, 220, 0.7); font-size: 0.9rem; margin-bottom: 8px;">
                    <i class="fas fa-shield-alt"></i>
                    C√≥digo √önico
                </div>
                <div class="code">{{ user.uniqueCode }}</div>
            </div>

            {# Informaci√≥n personal #}
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-envelope"></i>
                        Correo Electr√≥nico
                    </div>
                    <div class="info-value">{{ user.email }}</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-phone"></i>
                        Tel√©fono
                    </div>
                    <div class="info-value">{{ user.phone ?? 'No registrado' }}</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-calendar-plus"></i>
                        Miembro desde
                    </div>
                    <div class="info-value">{{ user.createdAt|date('d/m/Y') }}</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-check-circle"></i>
                        Estado
                    </div>
                    <div class="info-value" style="color: {{ user.isActive ? '#10b981' : '#ef4444' }};">
                        {{ user.isActive ? 'Activo' : 'Inactivo' }}
                    </div>
                </div>
            </div>

            {# Preferencias de tabaco #}
            {% if user.tobaccoPreferences is not empty %}
                <div class="preferences-section">
                    <h3>
                        <i class="fas fa-leaf"></i>
                        Preferencias de Tabaco
                    </h3>
                    <div class="preferences-list">
                        {% for preference in user.tobaccoPreferences %}
                            ‚Ä¢ {{ preference }}<br>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Botones de acci√≥n #}
            <div class="action-buttons">
                <a href="{{ path('profile_edit') }}" class="premium-button">
                    <i class="fas fa-edit"></i>
                    Editar Perfil
                </a>
                <a href="{{ path('dashboard_redirect') }}" class="premium-button secondary-button">
                    <i class="fas fa-home"></i>
                    Ir al Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('‚úÖ Profile view page loaded');
        console.log('üë§ Usuario:', '{{ user.email }}');
    });
</script>
{% endblock %}
