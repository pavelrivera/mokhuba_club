{# templates/invitation/my_invitations.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mis Invitaciones | Mokhuba Club{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .invitations-container {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--black-premium) 0%, var(--dark-brown) 100%);
            padding: 40px 0;
        }

        .invitations-header {
            background: linear-gradient(135deg, rgba(45, 24, 23, 0.9), rgba(92, 26, 26, 0.8));
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
        }

        .invitations-header h1 {
            color: var(--gold-primary);
            font-family: var(--font-heading);
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .stat-card {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--gold-primary);
            margin-bottom: 10px;
        }

        .stat-label {
            color: var(--cream);
            opacity: 0.8;
            font-size: 0.9rem;
        }

        .invitation-card {
            background: linear-gradient(135deg, rgba(45, 24, 23, 0.9), rgba(92, 26, 26, 0.8));
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .invitation-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(212, 175, 55, 0.2);
        }

        .invitation-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .invitee-name {
            color: var(--gold-primary);
            font-size: 1.3rem;
            font-weight: 700;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-pending {
            background: rgba(245, 158, 11, 0.2);
            border: 1px solid rgba(245, 158, 11, 0.4);
            color: #fbbf24;
        }

        .status-accepted {
            background: rgba(16, 185, 129, 0.2);
            border: 1px solid rgba(16, 185, 129, 0.4);
            color: #34d399;
        }

        .status-expired {
            background: rgba(239, 68, 68, 0.2);
            border: 1px solid rgba(239, 68, 68, 0.4);
            color: #f87171;
        }

        .status-cancelled {
            background: rgba(107, 114, 128, 0.2);
            border: 1px solid rgba(107, 114, 128, 0.4);
            color: #9ca3af;
        }

        .invitation-details {
            color: var(--cream);
            margin: 10px 0;
        }

        .invitation-details .detail-item {
            margin: 5px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .invitation-details .detail-icon {
            color: var(--gold-primary);
            width: 20px;
        }

        .invitation-message {
            background: rgba(0, 0, 0, 0.2);
            border-left: 3px solid var(--gold-primary);
            padding: 15px;
            margin: 15px 0;
            border-radius: 5px;
            font-style: italic;
            color: rgba(248, 242, 231, 0.9);
        }

        .invitation-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .btn-cancel {
            background: rgba(239, 68, 68, 0.2);
            border: 1px solid rgba(239, 68, 68, 0.4);
            color: #f87171;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .btn-cancel:hover {
            background: rgba(239, 68, 68, 0.3);
            transform: translateY(-2px);
        }

        .btn-send-new {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-light));
            border: none;
            color: var(--dark-brown);
            font-weight: 700;
            padding: 15px 30px;
            border-radius: 12px;
            font-size: 1.1rem;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
        }

        .btn-send-new:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 15px;
            border: 2px dashed rgba(212, 175, 55, 0.3);
        }

        .empty-state-icon {
            font-size: 4rem;
            color: var(--gold-primary);
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="invitations-container">
    <div class="container">
        <!-- Header -->
        <div class="invitations-header">
            <h1><i class="fas fa-envelope me-3"></i>Mis Invitaciones</h1>
            
            <!-- Statistics -->
            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-value">{{ stats.total }}</div>
                    <div class="stat-label">Total Enviadas</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">{{ stats.pending }}</div>
                    <div class="stat-label">Pendientes</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">{{ stats.accepted }}</div>
                    <div class="stat-label">Aceptadas</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">{{ stats.expired }}</div>
                    <div class="stat-label">Expiradas</div>
                </div>
            </div>

            <div style="margin-top: 20px;">
                <button class="btn btn-send-new" data-bs-toggle="modal" data-bs-target="#invitationModal">
                    <i class="fas fa-paper-plane me-2"></i>Enviar Nueva Invitación
                </button>
            </div>
        </div>

        <!-- Invitations List -->
        {% if invitations|length > 0 %}
            {% for invitation in invitations %}
            <div class="invitation-card">
                <div class="invitation-header">
                    <div>
                        <div class="invitee-name">
                            <i class="fas fa-user-circle me-2"></i>
                            {{ invitation.inviteeName }}
                        </div>
                    </div>
                    <div>
                        <span class="status-badge status-{{ invitation.status }}">
                            {% if invitation.status == 'pending' %}
                                <i class="fas fa-clock me-1"></i>Pendiente
                            {% elseif invitation.status == 'accepted' %}
                                <i class="fas fa-check-circle me-1"></i>Aceptada
                            {% elseif invitation.status == 'expired' %}
                                <i class="fas fa-times-circle me-1"></i>Expirada
                            {% else %}
                                <i class="fas fa-ban me-1"></i>Cancelada
                            {% endif %}
                        </span>
                    </div>
                </div>

                <div class="invitation-details">
                    <div class="detail-item">
                        <i class="fas fa-envelope detail-icon"></i>
                        <span>{{ invitation.inviteeEmail }}</span>
                    </div>
                    {% if invitation.inviteePhone %}
                    <div class="detail-item">
                        <i class="fas fa-phone detail-icon"></i>
                        <span>{{ invitation.inviteePhone }}</span>
                    </div>
                    {% endif %}
                    <div class="detail-item">
                        <i class="fas fa-calendar detail-icon"></i>
                        <span>Enviada: {{ invitation.sentAt|date('d/m/Y H:i') }}</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-hourglass-half detail-icon"></i>
                        <span>Expira: {{ invitation.expiresAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% if invitation.acceptedAt %}
                    <div class="detail-item">
                        <i class="fas fa-check detail-icon"></i>
                        <span>Aceptada: {{ invitation.acceptedAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% endif %}
                </div>

                {% if invitation.message %}
                <div class="invitation-message">
                    <i class="fas fa-quote-left me-2"></i>
                    {{ invitation.message }}
                </div>
                {% endif %}

                <div class="invitation-actions">
                    {% if invitation.status == 'pending' %}
                    <button class="btn btn-cancel" onclick="cancelInvitation({{ invitation.id }})">
                        <i class="fas fa-ban me-2"></i>Cancelar Invitación
                    </button>
                    {% endif %}
                    {% if invitation.createdUser %}
                    <div style="flex: 1; text-align: right; color: var(--cream); opacity: 0.7; font-size: 0.9rem;">
                        <i class="fas fa-user-check me-2"></i>
                        Usuario creado: {{ invitation.createdUser.fullName }}
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-envelope-open-text"></i>
                </div>
                <h3 style="color: var(--gold-primary); margin-bottom: 15px;">
                    No has enviado invitaciones aún
                </h3>
                <p style="color: var(--cream); opacity: 0.8; margin-bottom: 25px;">
                    Invita a tus amigos y conocidos a unirse a Mokhuba Club
                </p>
                <button class="btn btn-send-new" data-bs-toggle="modal" data-bs-target="#invitationModal">
                    <i class="fas fa-paper-plane me-2"></i>Enviar Primera Invitación
                </button>
            </div>
        {% endif %}
    </div>
</div>

<!-- Incluir modal de invitación -->
{% include 'partials/invitation_modal.html.twig' %}

<script>
async function cancelInvitation(invitationId) {
    if (!confirm('¿Estás seguro de que deseas cancelar esta invitación?')) {
        return;
    }

    try {
        const response = await fetch(`{{ path('invitation_cancel', {id: '__ID__'}) }}`.replace('__ID__', invitationId), {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        });

        const result = await response.json();

        if (result.success) {
            alert('Invitación cancelada exitosamente');
            window.location.reload();
        } else {
            alert(result.message || 'Error al cancelar la invitación');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error de conexión. Por favor, intenta de nuevo.');
    }
}
</script>
{% endblock %}
