{% extends 'base.html.twig' %}

{% block title %}Dashboard Platinum - {{ user.fullName }} | Mokhuba Club{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .platinum-dashboard {
            min-height: 100vh;
            background: linear-gradient(135deg, #0a1a1f 0%, #1a3a3f 100%);
            padding: 40px 0;
        }

        .platinum-header {
            background: linear-gradient(135deg, rgba(23, 162, 184, 0.2), rgba(19, 132, 150, 0.1));
            border: 2px solid #17a2b8;
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .platinum-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #17a2b8, #00d4ff, #17a2b8);
            animation: shimmer 3s infinite;
        }

        @keyframes shimmer {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .platinum-icon {
            font-size: 5rem;
            color: #17a2b8;
            margin-bottom: 20px;
            filter: drop-shadow(0 0 20px rgba(23, 162, 184, 0.5));
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .vip-badge {
            background: linear-gradient(135deg, #17a2b8, #00d4ff);
            color: white;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 800;
            display: inline-block;
            margin-top: 15px;
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.4);
        }

        .feature-card {
            background: rgba(45, 24, 23, 0.8);
            border: 1px solid rgba(23, 162, 184, 0.3);
            border-radius: 16px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            border-color: #17a2b8;
            box-shadow: 0 15px 30px rgba(23, 162, 184, 0.3);
        }

        .elite-section {
            background: linear-gradient(135deg, rgba(23, 162, 184, 0.1), rgba(0, 212, 255, 0.05));
            border: 2px solid #17a2b8;
            border-radius: 20px;
            padding: 40px;
            margin-top: 40px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="platinum-dashboard">
    <div class="container">
        <!-- Header Platinum -->
        <div class="platinum-header">
            <div class="platinum-icon">
                <i class="fas fa-crown"></i>
            </div>
            <h1 style="color: #17a2b8; font-size: 3rem; margin-bottom: 15px; text-shadow: 0 0 20px rgba(23, 162, 184, 0.5);">
                Membresía Platinum
            </h1>
            <span class="vip-badge"><i class="fas fa-star"></i> VIP ELITE</span>
            <p style="color: var(--cream); font-size: 1.3rem; margin: 20px 0 10px;">
                Bienvenido, <strong>{{ user.fullName }}</strong>
            </p>
            <div class="user-code" style="background: rgba(0, 0, 0, 0.3); border: 1px solid #17a2b8; border-radius: 12px; padding: 8px 16px; display: inline-block; margin-top: 10px;">
                <strong style="color: #17a2b8;">Código VIP:</strong> <span style="color: var(--cream);">{{ user.userCode }}</span>
            </div>
            <p style="color: rgba(255, 248, 220, 0.7); margin-top: 20px;">
                Estado: <strong style="color: #10b981;">Activa</strong> | Renovación: <strong>{{ "now"|date_modify('+1 year')|date('d/m/Y') }}</strong>
            </p>
        </div>

        <!-- Mensaje de Bienvenida VIP -->
        <div style="background: rgba(23, 162, 184, 0.1); border: 1px solid #17a2b8; border-radius: 16px; padding: 30px; margin-bottom: 40px; text-align: center;">
            <h2 style="color: #17a2b8; margin-bottom: 15px;">
                <i class="fas fa-gem"></i> Gracias por ser miembro Platinum
            </h2>
            <p style="color: var(--cream); font-size: 1.1rem; line-height: 1.8;">
                Has alcanzado el nivel más alto de membresía en Mokhuba Club. Disfruta de todos los beneficios exclusivos, 
                atención personalizada y acceso ilimitado a nuestra red elite.
            </p>
        </div>

        <!-- Características de Platinum -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 25px; margin-bottom: 40px;">
            <div class="feature-card">
                <i class="fas fa-gem" style="font-size: 3rem; color: #e11d48; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Todo Ruby</h3>
                <p style="color: var(--cream);">Acceso completo a beneficios Ruby</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-medal" style="font-size: 3rem; color: #ffc107; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Todo Gold</h3>
                <p style="color: var(--cream);">Acceso completo a beneficios Gold premium</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-crown" style="font-size: 3rem; color: #17a2b8; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Dashboard Platinum</h3>
                <p style="color: var(--cream);">Panel VIP exclusivo con herramientas avanzadas</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-user-tie" style="font-size: 3rem; color: #17a2b8; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Conserje Personal</h3>
                <p style="color: var(--cream);">Asistente dedicado disponible 24/7</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-infinity" style="font-size: 3rem; color: #17a2b8; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Eventos Ilimitados</h3>
                <p style="color: var(--cream);">Acceso sin límite + 2 acompañantes VIP</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-handshake" style="font-size: 3rem; color: #17a2b8; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Networking Elite</h3>
                <p style="color: var(--cream);">Conexiones exclusivas con líderes de la industria</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-chart-line" style="font-size: 3rem; color: #17a2b8; margin-bottom: 15px;"></i>
                <h3 style="color: var(--gold-primary); margin-bottom: 10px;">Asesoría Personalizada</h3>
                <p style="color: var(--cream);">Consultoría mensual one-on-one</p>
            </div>

            <div class="feature-card">
