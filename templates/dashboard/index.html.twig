{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ user.fullName }} | Mokhuba Club{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Dashboard Premium Styles */
        .dashboard-container {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--black-premium) 0%, var(--dark-brown) 100%);
            padding: 40px 0;
        }

        .dashboard-header {
            background: linear-gradient(135deg, rgba(45, 24, 23, 0.9), rgba(92, 26, 26, 0.8));
            backdrop-filter: blur(10px);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--gold-primary), var(--gold-light), var(--gold-primary));
        }

        .user-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .user-details h1 {
            font-family: var(--font-heading);
            font-size: 2.5rem;
            color: var(--gold-primary);
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .user-code {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(212, 175, 55, 0.5);
            border-radius: 12px;
            padding: 8px 16px;
            display: inline-block;
            margin-bottom: 10px;
            color: var(--cream);
        }

        .user-code strong {
            color: var(--gold-primary);
            font-weight: 700;
        }

        .verification-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .verified {
            background: rgba(16, 185, 129, 0.2);
            border: 1px solid rgba(16, 185, 129, 0.4);
            color: #34d399;
        }

        .pending {
            background: rgba(245, 158, 11, 0.2);
            border: 1px solid rgba(245, 158, 11, 0.4);
            color: #fbbf24;
        }

        .user-avatar {
            position: relative;
        }

        .avatar-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 3px solid var(--gold-primary);
            box-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
        }

        .avatar-placeholder {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-brown);
            border: 3px solid var(--gold-light);
            box-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(45, 24, 23, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 16px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-8px);
            border-color: var(--gold-primary);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .stat-card:hover::before {
            left: 100%;
        }

        .stat-icon {
            font-size: 3rem;
            color: var(--gold-primary);
            margin-bottom: 15px;
            filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.3));
        }

        .stat-title {
            font-size: 1.1rem;
            color: var(--cream);
            margin-bottom: 10px;
            font-weight: 600;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 800;
            color: var(--gold-primary);
            margin-bottom: 5px;
        }

        .stat-description {
            font-size: 0.9rem;
            color: rgba(255, 248, 220, 0.7);
        }

        /* Main Content Grid */
        .main-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 40px;
            align-items: start;
        }

        .content-card {
            background: rgba(45, 24, 23, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .content-card:hover {
            border-color: rgba(212, 175, 55, 0.5);
        }

        .card-header {
            padding: 25px;
            border-bottom: 1px solid rgba(212, 175, 55, 0.2);
            background: rgba(0, 0, 0, 0.2);
        }

        .card-title {
            font-family: var(--font-heading);
            font-size: 1.5rem;
            color: var(--gold-primary);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-body {
            padding: 25px;
        }

        /* Membership Selection */
        .membership-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }

        .membership-card {
            background: rgba(0, 0, 0, 0.3);
            border: 2px solid rgba(212, 175, 55, 0.3);
            border-radius: 16px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .membership-card.popular {
            border-color: var(--gold-primary);
            background: rgba(212, 175, 55, 0.1);
        }

        .membership-card.popular::before {
            content: 'POPULAR';
            position: absolute;
            top: 10px;
            right: -30px;
            background: var(--gold-primary);
            color: var(--dark-brown);
            padding: 5px 40px;
            font-size: 0.7rem;
            font-weight: 700;
            transform: rotate(45deg);
        }

        .membership-card:hover {
            transform: translateY(-5px);
            border-color: var(--gold-primary);
            background: rgba(212, 175, 55, 0.15);
        }

        .membership-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .ruby { color: #e11d48; }
        .gold { color: var(--gold-primary); }
        .platinum { color: #e5e7eb; }

        .membership-name {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--cream);
            margin-bottom: 10px;
        }

        .membership-price {
            font-size: 1.8rem;
            font-weight: 800;
            color: var(--gold-primary);
            margin-bottom: 15px;
        }

        .membership-button {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
            color: var(--dark-brown);
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .membership-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.4);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: rgba(255, 248, 220, 0.6);
        }

        .empty-icon {
            font-size: 4rem;
            color: rgba(212, 175, 55, 0.3);
            margin-bottom: 20px;
        }

        .empty-title {
            font-size: 1.2rem;
            color: rgba(255, 248, 220, 0.8);
            margin-bottom: 10px;
        }

        /* Profile Card */
        .profile-card {
            text-align: center;
        }

        .profile-avatar {
            margin-bottom: 20px;
        }

        .profile-name {
            font-family: var(--font-heading);
            font-size: 1.5rem;
            color: var(--gold-primary);
            margin-bottom: 5px;
        }

        .profile-email {
            color: rgba(255, 248, 220, 0.7);
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .profile-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin: 20px 0;
            padding: 20px 0;
            border-top: 1px solid rgba(212, 175, 55, 0.2);
            border-bottom: 1px solid rgba(212, 175, 55, 0.2);
        }

        .profile-stat {
            text-align: center;
        }

        .profile-stat-label {
            font-size: 0.8rem;
            color: rgba(255, 248, 220, 0.6);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .profile-stat-value {
            font-weight: 600;
            color: var(--cream);
        }

        .status-badge {
            background: rgba(16, 185, 129, 0.2);
            color: #34d399;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .edit-profile-btn {
            background: transparent;
            border: 2px solid var(--gold-primary);
            color: var(--gold-primary);
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .edit-profile-btn:hover {
            background: var(--gold-primary);
            color: var(--dark-brown);
        }

        /* Tobacco Preferences */
        .preferences-list {
            list-style: none;
            padding: 0;
        }

        .preference-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid rgba(212, 175, 55, 0.1);
        }

        .preference-item:last-child {
            border-bottom: none;
        }

        .preference-label {
            font-weight: 600;
            color: var(--cream);
        }

        .preference-value {
            color: var(--gold-primary);
            font-weight: 500;
        }

        /* Quick Actions */
        .action-button {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background: transparent;
            border: 2px solid rgba(212, 175, 55, 0.3);
            color: rgba(255, 248, 220, 0.7);
            padding: 15px;
            border-radius: 12px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
            cursor: not-allowed;
            text-decoration: none;
            width: 100%;
        }

        .action-button:disabled {
            opacity: 0.6;
        }

        .action-button.enabled {
            border-color: var(--gold-primary);
            color: var(--gold-primary);
            cursor: pointer;
        }

        .action-button.enabled:hover {
            background: rgba(212, 175, 55, 0.1);
        }

        .action-description {
            font-size: 0.8rem;
            color: rgba(255, 248, 220, 0.5);
            margin-top: 5px;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .main-content {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .user-info {
                flex-direction: column;
                text-align: center;
            }
            
            .stats-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            }
            
            .membership-grid {
                grid-template-columns: 1fr;
            }
            
            .profile-stats {
                grid-template-columns: 1fr;
            }
            
            .dashboard-container {
                padding: 20px 0;
            }
        }

        /* Modal Styles */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10000;
            padding: 20px;
        }

        .modal.hidden {
            display: none;
        }

        .modal-content {
            background: linear-gradient(135deg, var(--dark-brown), var(--black-premium));
            border: 2px solid var(--gold-primary);
            border-radius: 20px;
            padding: 40px;
            max-width: 600px;
            width: 100%;
            max-height: 80vh;
            overflow-y: auto;
            position: relative;
        }

        .modal-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .modal-title {
            font-family: var(--font-heading);
            font-size: 2rem;
            color: var(--gold-primary);
            margin-bottom: 10px;
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 15px;
            background: none;
            border: none;
            color: var(--gold-primary);
            font-size: 1.5rem;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .close-modal:hover {
            color: var(--gold-light);
        }
    </style>
{% endblock %}

{% block body %}
{# Safe fallback for verified flag #}
{# Safe fallbacks for avatar and initials #}
{% set photoUrl = (photoUrl is defined and photoUrl) 
    ? photoUrl 
    : ((user.avatarUrl is defined and user.avatarUrl) 
        ? user.avatarUrl 
        : ((user.profilePhoto is defined and user.profilePhoto) 
            ? user.profilePhoto 
            : null)) %}
{% set firstInitial = (user.firstName is defined and user.firstName) 
    ? (user.firstName|first) 
    : ((user.email is defined and user.email) ? (user.email|first) : '?') %}
{% set lastInitial = (user.lastName is defined and user.lastName) 
    ? (user.lastName|first) 
    : '' %}
{% set safeInitials = (firstInitial ~ lastInitial)|upper %}
{% set isVerified = (user.isVerified is defined) ? user.isVerified : ((isVerified is defined) ? isVerified : false) %}

<div class="dashboard-container">
    <div class="container">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <div class="user-info">
                <div class="user-details">
                    <h1>
                        <i class="fas fa-tachometer-alt"></i>
                        Bienvenido, {{ user.firstName }}
                    </h1>
                    <div class="user-code">
                        <i class="fas fa-id-card"></i>
                        Código: <strong>{{ user.uniqueCode }}</strong>
                    </div>
                    <div class="verification-badge {% if isVerified %}verified{% else %}pending{% endif %}">
                        <i class="fas fa-{% if isVerified %}check-circle{% else %}exclamation-triangle{% endif %}"></i>
                        {% if isVerified %}Email Verificado{% else %}Email Pendiente{% endif %}
                    </div>
                </div>
                <div class="user-avatar">
                    {% if photoUrl %}
                        <img src="{{ photoUrl }}" alt="Foto de perfil" class="avatar-image">
                    {% else %}
                        <div class="avatar-placeholder">
                            {{ safeInitials }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-crown"></i>
                </div>
                <div class="stat-title">Membresía</div>
                <div class="stat-value">Sin Membresía</div>
                <div class="stat-description">Selecciona tu nivel</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-palette"></i>
                </div>
                <div class="stat-title">Marcas</div>
                <div class="stat-value">0</div>
                <div class="stat-description">Requiere membresía Oro+</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-title">Pedidos</div>
                <div class="stat-value">0</div>
                <div class="stat-description">Historial de compras</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-calendar-star"></i>
                </div>
                <div class="stat-title">Eventos</div>
                <div class="stat-value">0</div>
                <div class="stat-description">Próximos eventos</div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Left Column -->
            <div class="left-column">
                <!-- Membership Selection -->
                <div class="content-card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-gem"></i>
                            Selecciona tu Membresía
                        </h2>
                    </div>
                    <div class="card-body">
                        <p style="color: rgba(255, 248, 220, 0.8); margin-bottom: 30px;">
                            Para acceder a todas las funciones del club, necesitas seleccionar un nivel de membresía.
                        </p>
                        
                        <div class="membership-grid">
                            <div class="membership-card" onclick="selectMembership('ruby')">
                                <div class="membership-icon ruby">
                                    <i class="fas fa-gem"></i>
                                </div>
                                <div class="membership-name">Rubí</div>
                                <div class="membership-price">$299/mes</div>
                                <button class="membership-button">Seleccionar</button>
                            </div>
                            
                            <div class="membership-card popular" onclick="selectMembership('gold')">
                                <div class="membership-icon gold">
                                    <i class="fas fa-medal"></i>
                                </div>
                                <div class="membership-name">Oro</div>
                                <div class="membership-price">$599/mes</div>
                                <button class="membership-button">Seleccionar</button>
                            </div>
                            
                            <div class="membership-card" onclick="selectMembership('platinum')">
                                <div class="membership-icon platinum">
                                    <i class="fas fa-crown"></i>
                                </div>
                                <div class="membership-name">Platino</div>
                                <div class="membership-price">$999/mes</div>
                                <button class="membership-button">Seleccionar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="content-card" style="margin-top: 40px;">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-history"></i>
                            Actividad Reciente
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-inbox"></i>
                            </div>
                            <div class="empty-title">No hay actividad reciente</div>
                            <p>Tu actividad aparecerá aquí una vez que comiences a usar el club.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="right-column">
                <!-- Profile Card -->
                <div class="content-card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-user"></i>
                            Mi Perfil
                        </h2>
                    </div>
                    <div class="card-body profile-card">
                        <div class="profile-avatar">
                            {% if photoUrl %}
                                <img src="{{ photoUrl }}" alt="Foto de perfil" class="avatar-image">
                            {% else %}
                                <div class="avatar-placeholder">
                                    {{ safeInitials }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="profile-name">{{ user.fullName }}</div>
                        <div class="profile-email">{{ user.email }}</div>
                        
                        <div class="profile-stats">
                            <div class="profile-stat">
                                <div class="profile-stat-label">Miembro desde</div>
                                <div class="profile-stat-value">{{ user.createdAt|date('M Y') }}</div>
                            </div>
                            <div class="profile-stat">
                                <div class="profile-stat-label">Estado</div>
                                <div class="status-badge">Activo</div>
                            </div>
                        </div>
                        
                        <button class="edit-profile-btn" onclick="editProfile()">
                            <i class="fas fa-edit"></i>
                            Editar Perfil
                        </button>
                    </div>
                </div>

                <!-- Tobacco Preferences -->
                {% if user.tobaccoPreferences %}
                <div class="content-card" style="margin-top: 30px;">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-smoking"></i>
                            Preferencias de Tabaco
                        </h3>
                    </div>
                    <div class="card-body">
                        
{# SAFE_TP_GUARD_START #}
{% set __tp = user.tobaccoPreferences %}
{% if __tp is iterable %}
<ul class="preferences-list">
    {# Normalizamos la variable #}
    {% set prefs = user.tobaccoPreferences %}

    {% if prefs is empty %}
        <li class="preference-item">
            <span class="preference-label">Preferencias:</span>
            <span class="preference-value">No configuradas</span>
        </li>
    {% else %}
        {# Caso 1: estructura con claves (strength, flavors, aromas, types, additional) #}
        {% if prefs.strength is defined or prefs.flavors is defined or prefs.aromas is defined or prefs.types is defined or prefs.additional is defined %}
            {% if prefs.strength is defined and prefs.strength %}
                <li class="preference-item">
                    <span class="preference-label">Fortaleza:</span>
                    <span class="preference-value">{{ prefs.strength|title }}</span>
                </li>
            {% endif %}
            {% if prefs.flavors is defined and prefs.flavors %}
                <li class="preference-item">
                    <span class="preference-label">Sabores:</span>
                    <span class="preference-value">{{ (prefs.flavors is iterable) ? (prefs.flavors|join(', ')|title) : (prefs.flavors|title) }}</span>
                </li>
            {% endif %}
            {% if prefs.aromas is defined and prefs.aromas %}
                <li class="preference-item">
                    <span class="preference-label">Aromas:</span>
                    <span class="preference-value">{{ (prefs.aromas is iterable) ? (prefs.aromas|join(', ')|title) : (prefs.aromas|title) }}</span>
                </li>
            {% endif %}
            {% if prefs.types is defined and prefs.types %}
                <li class="preference-item">
                    <span class="preference-label">Tipos:</span>
                    <span class="preference-value">{{ (prefs.types is iterable) ? (prefs.types|join(', ')|title) : (prefs.types|title) }}</span>
                </li>
            {% endif %}
            {% if prefs.additional is defined and prefs.additional %}
                <li class="preference-item">
                    <span class="preference-label">Adicional:</span>
                    <span class="preference-value">{{ prefs.additional }}</span>
                </li>
            {% endif %}
        {% elseif prefs is iterable %}
            {# Caso 2: es un array plano (p.ej. ["prueba de edicion de perfil"]) #}
            <li class="preference-item">
                <span class="preference-label">Preferencias:</span>
                <span class="preference-value">{{ prefs|join(', ') }}</span>
            </li>
        {% else %}
            {# Caso 3: es un string simple #}
            <li class="preference-item">
                <span class="preference-label">Preferencias:</span>
                <span class="preference-value">{{ prefs }}</span>
            </li>
        {% endif %}
    {% endif %}
</ul>
