<!-- Membership Selection Modal -->
<div class="modal hidden" id="membershipModal">
    <div class="modal-content">
        <button class="close-modal" onclick="closeModal()">
            <i class="fas fa-times"></i>
        </button>
        <div class="modal-header">
            <h2 class="modal-title">
                <i class="fas fa-gem"></i>
                Seleccionar Membresía
            </h2>
        </div>
        <div id="membership-content">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

<script>
function selectMembership(level) {
    const modal = document.getElementById('membershipModal');
    const content = document.getElementById('membership-content');
    
    // Show loading
    content.innerHTML = `
        <div style="text-align: center; padding: 40px;">
            <i class="fas fa-spinner fa-spin fa-3x" style="color: var(--gold-primary); margin-bottom: 20px;"></i>
            <p style="color: var(--cream);">Cargando detalles de membresía...</p>
        </div>
    `;
    
    modal.classList.remove('hidden');
    
    // Simulate loading
    setTimeout(() => {
        const membershipData = {
            ruby: {
                name: 'Rubí',
                price: 299,
                icon: 'fas fa-gem',
                color: '#e11d48',
                benefits: ['Acceso a eventos', 'Compras exclusivas', 'Regalo de cumpleaños', 'Nuevas vitolas']
            },
            gold: {
                name: 'Oro',
                price: 599,
                icon: 'fas fa-medal',
                color: '#d4af37',
                benefits: ['Todo lo de Rubí', '1 marca personalizada', 'Hasta 2 líneas', '1 regalo anual']
            },
            platinum: {
                name: 'Platino',
                price: 999,
                icon: 'fas fa-crown',
                color: '#e5e7eb',
                benefits: ['Todo lo de Oro', 'Hasta 3 marcas', 'Visitas a cosechas', '2 acompañantes']
            }
        };
        
        const membership = membershipData[level];
        
        content.innerHTML = `
            <div style="text-align: center; margin-bottom: 30px;">
                <i class="${membership.icon}" style="font-size: 4rem; color: ${membership.color}; margin-bottom: 20px;"></i>
                <h3 style="color: var(--gold-primary); font-size: 2rem; margin-bottom: 10px;">Membresía ${membership.name}</h3>
                <p style="font-size: 2.5rem; color: var(--gold-primary); font-weight: 800;">$${membership.price} USD/mes</p>
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px; margin-bottom: 30px;">
                <div>
                    <h4 style="color: var(--gold-primary); margin-bottom: 15px;">Beneficios incluidos:</h4>
                    <ul style="list-style: none; padding: 0;">
                        ${membership.benefits.map(benefit => 
                            `<li style="margin-bottom: 10px; color: var(--cream);"><i class="fas fa-check" style="color: #10b981; margin-right: 10px;"></i>${benefit}</li>`
                        ).join('')}
                    </ul>
                </div>
                <div style="background: rgba(0, 0, 0, 0.3); padding: 20px; border-radius: 12px;">
                    <h4 style="color: var(--gold-primary); margin-bottom: 15px;">Resumen del Pago</h4>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                        <span style="color: var(--cream);">Membresía ${membership.name}</span>
                        <span style="color: var(--cream);">$${membership.price}</span>
                    </div>
                    <hr style="border: none; height: 1px; background: rgba(212, 175, 55, 0.3); margin: 15px 0;">
                    <div style="display: flex; justify-content: space-between;">
                        <strong style="color: var(--cream);">Total Mensual</strong>
                        <strong style="color: var(--gold-primary);">$${membership.price} USD</strong>
                    </div>
                </div>
            </div>
            
            <div style="display: flex; gap: 15px; justify-content: center;">
                <button class="premium-button" onclick="proceedToPayment('${level}')" style="padding: 15px 30px;">
                    <i class="fas fa-credit-card"></i>
                    Proceder al Pago
                </button>
                <button class="edit-profile-btn" onclick="closeModal()" style="padding: 15px 30px;">
                    Cancelar
                </button>
            </div>
        `;
    }, 1000);
}

function proceedToPayment(level) {
    // Cerrar el modal
    closeModal();
    
    // Redirigir al formulario de checkout
    // Mapeo de niveles a rutas de Symfony
    const paymentUrls = {
        'ruby': '{{ path("payment_checkout_form", {membershipType: "ruby"}) }}',
        'gold': '{{ path("payment_checkout_form", {membershipType: "gold"}) }}',
        'platinum': '{{ path("payment_checkout_form", {membershipType: "platinum"}) }}'
    };
    
    // Redirigir usando la ruta correcta de Symfony
    window.location.href = paymentUrls[level] || '{{ path("payment_membership_selection") }}';
}

function editProfile() {
    window.location.href = '{{ path("profile_edit") }}';
}

function closeModal() {
    document.getElementById('membershipModal').classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('membershipModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeModal();
    }
});

// Load dashboard data
document.addEventListener('DOMContentLoaded', function() {
    console.log('Dashboard loaded for user: {{ user.email }}');
    
    // Animate stats on load
    const statCards = document.querySelectorAll('.stat-card');
    statCards.forEach((card, index) => {
        setTimeout(() => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'all 0.6s ease';
            
            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        }, index * 150);
    });
});
</script>

