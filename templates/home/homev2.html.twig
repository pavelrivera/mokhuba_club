    <style>
        /* Estilos 3D y efectos premium */
        .clay-surface {
            background: linear-gradient(145deg, #2d1817, #1a0f0e);
            box-shadow: 
                20px 20px 40px #0d0706,
                -20px -20px 40px #3d241f,
                inset 5px 5px 10px rgba(212, 175, 55, 0.1);
        }

        .isometric-container {
            transform: perspective(1000px) rotateX(5deg);
            transform-style: preserve-3d;
        }

        .fluorescent-glow {
            position: relative;
        }

        .fluorescent-glow::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(ellipse at center, rgba(212, 175, 55, 0.3), transparent 70%);
            pointer-events: none;
        }

        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .glossy-surface {
            background: linear-gradient(135deg, 
                rgba(212, 175, 55, 0.9) 0%,
                rgba(184, 148, 31, 0.8) 25%,
                rgba(255, 215, 0, 0.9) 50%,
                rgba(184, 148, 31, 0.8) 75%,
                rgba(212, 175, 55, 0.9) 100%);
            position: relative;
            overflow: hidden;
        }

        .glossy-surface::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transform: rotate(45deg);
            animation: glossyShine 3s infinite;
        }

        @keyframes glossyShine {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .edge-light {
            border: 1px solid rgba(212, 175, 55, 0.5);
            box-shadow: 
                0 0 20px rgba(212, 175, 55, 0.3),
                inset 0 1px 1px rgba(255, 255, 255, 0.2);
        }

        .text-3d {
            text-shadow: 
                2px 2px 0px rgba(0, 0, 0, 0.5),
                4px 4px 10px rgba(0, 0, 0, 0.3),
                0 0 30px rgba(212, 175, 55, 0.5);
        }

        .contour-light {
            -webkit-text-stroke: 1px rgba(212, 175, 55, 0.3);
        }

        .fluorescent-text {
            color: var(--gold-primary);
            filter: drop-shadow(0 0 10px var(--gold-primary));
        }

        .soft-glow {
            text-shadow: 0 0 20px rgba(255, 248, 220, 0.3);
        }

        .glass-morphism {
            background: rgba(45, 24, 23, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: 12px;
        }

        .clay-depth {
            box-shadow: 
                8px 8px 16px rgba(0, 0, 0, 0.4),
                -8px -8px 16px rgba(61, 36, 31, 0.2),
                inset 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .isometric-card {
            transform: perspective(600px) rotateY(-5deg) rotateX(5deg);
            transition: transform 0.3s ease;
        }

        .isometric-card:hover {
            transform: perspective(600px) rotateY(0deg) rotateX(0deg) translateY(-10px);
        }

        .hover-lift {
            transition: transform 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-8px);
        }

        .glossy-text {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-light));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .clay-button {
            border-radius: 50px;
            position: relative;
            overflow: hidden;
            border: none;
        }

        .pulse-animation {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .clay-image {
            border-radius: 16px;
            overflow: hidden;
            position: relative;
        }

        .fluorescent-chip {
            filter: drop-shadow(0 0 5px currentColor);
        }

        .fluorescent-icon {
