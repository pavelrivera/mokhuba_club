        }

        .footer-description {
            color: rgba(255, 248, 220, 0.8);
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .social-links {
            display: flex;
            gap: 10px;
            margin-bottom: 2rem;
        }

        .social-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(212, 175, 55, 0.2);
            color: var(--gold-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-btn:hover {
            background: var(--gold-primary);
            color: var(--dark-brown);
            transform: translateY(-3px);
        }

        .footer-links {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .footer-link {
            color: rgba(255, 248, 220, 0.8);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-link:hover {
            color: var(--gold-primary);
        }

        .footer-subtitle {
            font-size: 1.2rem;
            color: var(--gold-primary);
            margin-bottom: 1rem;
        }

        .contact-info {
            display: flex;
