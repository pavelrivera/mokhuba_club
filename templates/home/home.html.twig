    <script>
        // Smooth scroll para los enlaces de navegación
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Hacer navbar fija al hacer scroll
        let lastScroll = 0;
        const navbar = document.querySelector('.navbar');
        
        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;
            
            if (currentScroll > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
            
            lastScroll = currentScroll;
        });

        // Selector de idiomas
        const langButton = document.getElementById('currentLang');
        const langDropdown = document.getElementById('langDropdown');

        langButton.addEventListener('click', (e) => {
            e.stopPropagation();
            langDropdown.classList.toggle('active');
        });

        // Cerrar dropdown al hacer clic fuera
        document.addEventListener('click', () => {
            langDropdown.classList.remove('active');
        });

        // Prevenir que el dropdown se cierre al hacer clic dentro
        langDropdown.addEventListener('click', (e) => {
            e.stopPropagation();
        });

        // Cambiar bandera al seleccionar idioma
        document.querySelectorAll('.lang-option').forEach(option => {
            option.addEventListener('click', function(e) {
                const flag = this.getAttribute('data-flag');
                const lang = this.getAttribute('data-lang');
                const flagImg = this.querySelector('.flag-img').src;
                
                // Actualizar botón actual
                document.querySelector('#currentLang .flag-img').src = flagImg;
                document.querySelector('#currentLang span').textContent = lang.toUpperCase();
            });
        });
    </script>
